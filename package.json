{
  "name": "cursor-ia-assistant",
  "displayName": "CursorIA Assistant",
  "description": "AI-powered coding assistant similar to CursorIA",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:cursorIA.openPanel"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "contributes": {
    "commands": [
      {
        "command": "cursorIA.openPanel",
        "title": "Open CursorIA Assistant",
        "icon": "$(light-bulb)"
      },
      {
        "command": "cursorIA.findSimilarCode",
        "title": "Buscar Código Similar"
      },
      {
        "command": "cursorIA.analyzeCode",
        "title": "Analizar y Mejorar Código"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cursor-ia-sidebar",
          "title": "CursorIA",
          "icon": "$(light-bulb)"
        }
      ]
    },
    "views": {
      "cursor-ia-sidebar": [
        {
          "type": "webview",
          "id": "cursorIA.sidebar",
          "name": "CursorIA Assistant"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.20.6",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@babel/parser": "^7.26.2",
    "@babel/traverse": "^7.25.9",
    "@babel/types": "^7.26.0",
    "axios": "^1.6.0",
    "vscode-languageclient": "^8.1.0"
  }
}
